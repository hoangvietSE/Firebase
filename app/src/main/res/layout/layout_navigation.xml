<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start|left"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_header" />

        <com.soict.hoangviet.firebase.adapter.BaseRecyclerView
            android:id="@+id/nav_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_header"
            android:background="@color/md_white_1000"
            android:paddingStart="@dimen/content_padding_8_dp"
            android:paddingTop="@dimen/content_padding_8_dp"
            android:paddingEnd="@dimen/content_padding_8_dp" />
    </RelativeLayout>

</com.google.android.material.navigation.NavigationView>