<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/csl_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/md_white_1000">

    <ImageView
        android:id="@+id/imv_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/tutorial_three" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_32_dp"
        android:text="@string/tutorial_button"
        app:cornerRadius="@dimen/radius_20_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>