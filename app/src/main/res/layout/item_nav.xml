<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/item_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/content_padding_8_dp"
    android:paddingTop="@dimen/content_padding_16_dp"
    android:paddingBottom="@dimen/content_padding_16_dp">

    <ImageView
        android:id="@+id/imv_item_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:src="@drawable/ic_home" />

    <TextView
        android:id="@+id/tv_item_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_32_dp"
        android:layout_toRightOf="@id/imv_item_nav"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tool:text="Home" />

</RelativeLayout>