<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="progressBarRed" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/md_white_1000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashbackground</item>
    </style>

    <style name="errorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegisCard" parent="CardView">
        <item name="android:layout_marginStart">@dimen/margin_8_dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8_dp</item>
        <item name="cardCornerRadius">@dimen/radius_20_dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_10_dp</item>
    </style>
</resources>