<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="progressBarRed" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/md_white_1000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashbackground</item>
    </style>

    <style name="errorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegisCard" parent="CardView">
        <item name="android:layout_marginStart">@dimen/margin_8_dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8_dp</item>
        <item name="cardCornerRadius">@dimen/radius_20_dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_10_dp</item>
    </style>

    <style name="UpdateProfileParent">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewUpdateProfile">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewDetailUpdateProfile">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>